using System;
using System.Collections.Generic;

class Program
{
    static void Main()
    {
        int input = int.Parse(Console.ReadLine());
        if(input%2 == 0)
        {
            Console.WriteLine((input/2 + 1) * (input/2 + 1));
        }
        else
        {
            Console.WriteLine((input / 2 + 2) * (input / 2 + 1));
        }
    }
}
